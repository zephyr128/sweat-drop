{
  "name": "sweatdrop",
  "version": "1.0.0",
  "private": true,
  "description": "SweatDrop - Fitness tracking platform",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:mobile": "npm run start --workspace=apps/mobile-app",
    "dev:admin": "npm run dev --workspace=apps/admin-panel",
    "build:mobile": "npm run build --workspace=apps/mobile-app",
    "build:admin": "npm run build --workspace=apps/admin-panel",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces"
  },
  "devDependencies": {
    "prettier": "^3.1.1"
  },
  "overrides": {
    "sweatdrop-admin-panel": {
      "react": "18.2.0",
      "react-dom": "18.2.0"
    },
    "sweatdrop-mobile": {
      "react": "19.2.3",
      "react-dom": "19.2.3"
    }
  },
  "resolutions": {
    "sweatdrop-admin-panel": {
      "react": "18.2.0",
      "react-dom": "18.2.0"
    },
    "sweatdrop-mobile": {
      "react": "19.2.3",
      "react-dom": "19.2.3"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
