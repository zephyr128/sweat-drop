{
  "name": "sweatdrop",
  "version": "1.0.0",
  "private": true,
  "description": "SweatDrop - Fitness tracking platform",
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "dev:mobile": "pnpm --filter sweatdrop-mobile-app start",
    "dev:admin": "pnpm --filter sweatdrop-admin-panel dev",
    "build:mobile": "pnpm --filter sweatdrop-mobile-app build",
    "build:admin": "pnpm --filter sweatdrop-admin-panel build",
    "lint": "pnpm --recursive lint",
    "type-check": "pnpm --recursive type-check"
  },
  "devDependencies": {
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0"
  }
}
